# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini

# Resend
RESEND_API_KEY=

# Google OAuth web credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Example for local Netlify dev callback:
GOOGLE_REDIRECT_URI=http://localhost:8790/auth/google/callback

# Supabase
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Security
# 32-byte random key in base64. Generate with:
# openssl rand -base64 32
GEE_TOKEN_ENCRYPTION_KEY=
GEE_SESSION_SECRET=

# Delivery
GEE_FROM_NAME=Gee
# Verified sender in Resend (for example hello@yourdomain.com, or onboarding@resend.dev for limited test mode)
GEE_FROM_EMAIL=

# Optional single-user local mode only
GOOGLE_REFRESH_TOKEN=
GEE_USER_EMAIL=
GEE_USER_NAME=
GEE_TO_EMAIL=

# Scheduling defaults
GEE_DAILY_SEND_HOUR_UTC=9
# Optional override for testing scheduled runner at a specific UTC hour
GEE_SCHEDULE_HOUR_OVERRIDE=

# Files (single-user local mode)
GEE_STATE_FILE=.gee-state.json
GEE_PREFERENCES_FILE=.gee-preferences.json

# Web app
GEE_WEB_PORT=8790
GEE_BASE_URL=http://localhost:8790

# Optional toggles
GEE_DRY_RUN=false
FORCE_WELCOME_EMAIL=false
